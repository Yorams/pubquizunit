script#introTemplate(type="text/x-handlebars-template")
    div.card.my-3
        div.card-body
            h2.card-title {{name}}
            h5.card-subtitle {{details}}
            div.countdownMain.collapse
                div.countdownText 
                    | Je hebt nog 
                    span.countdownTime
                    |  seconden tot de volgende vraag.
           
script#qOneTemplate(type="text/x-handlebars-template")
    div.card.my-3
        div.card-body
            h2.card-title {{name}}
            h5.card-subtitle {{questionType type}}
            p.card-text
                form.answers
                    fieldset.answersInput({{isDisabled}})
                        div.form-group
                            | {{#each this.answers}}
                            div.custom-control.custom-radio
                                input.custom-control-input(id="answer{{@index}}", type="radio", name="answer", value="{{this}}" required)
                                label.custom-control-label(for="answer{{@index}}") {{this}}
                            | {{/each}}
                        button.btn.btn-success.btn-lg.my-3.submitAnswerBtn Verzenden
                        div.countdownMain.collapse
                            div.countdownText 
                                | Je hebt nog 
                                span.countdownTime
                                |  seconden tot de volgende vraag.

